<?xml version="1.0"?>
<ruleset name="Custom">
  <description>Custom Coding Standards</description>

  <!-- Scan all files in directory -->
  <file>app/</file>
  <file>site/config/</file>
  <file>site/languages/</file>
  <file>site/snippets/</file>
  <file>site/templates/</file>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Ignore dependencies -->
  <exclude-pattern>kirby/</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>
  <exclude-pattern>node_modules/</exclude-pattern>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use PSR-12 as a base -->
  <rule ref="PSR12"/>
</ruleset>
