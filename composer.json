{
    "name": "benjaminhaeberli/benjaminhaeberli.ch",
    "description": "Personal website developed with Kirby CMS",
    "homepage": "https://github.com/benjaminhaeberli/benjaminhaeberli.ch.git",
    "type": "project",
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "Benjamin Haeberli",
            "email": "hello@benjaminhaeberli.ch",
            "homepage": "https://benjaminhaeberli.ch/"
        }
    ],
    "keywords": [
        "kirby",
        "website",
        "portfolio",
        "tailwindcss"
    ],
    "extra": {
        "include_files": [
            "app/bootstrap.php"
        ]
    },
    "autoload": {
        "classmap": [
            "app/"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "getkirby/composer-installer": true,
            "funkjedi/composer-include-files": true
        },
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.1"
        },
        "platform-check": true
    },
    "scripts": {
        "fix": [
            "@fix:composer",
            "@fix:phpcs"
        ],
        "fix:composer": [
            "composer clear-cache",
            "composer dump-autoload"
        ],
        "analyze": [
            "@analyze:composer",
            "@analyze:phpcpd",
            "@analyze:phpcs",
            "@analyze:phpstan",
            "@analyze:rector"
        ],
        "analyze:composer": "composer validate --strict --no-cache",
        "analyze:phpcpd": "./vendor/bin/phpcpd --fuzzy --exclude kirby --exclude vendor --exclude node_modules .",
        "analyze:phpcs": "./vendor/bin/phpcs --standard=./.phpcs.xml",
        "analyze:phpstan": "./vendor/bin/phpstan --configuration=./.phpstan.neon analyse",
        "analyze:rector": "./vendor/bin/rector process --dry-run",
        "fix:phpcs": "./vendor/bin/phpcbf --standard=./.phpcs.xml",
        "test": "./vendor/bin/phpunit --configuration=./.phpunit.xml --colors=always ./tests/",
        "watch": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/phpunit-watcher watch"
        ],
        "server": [
            "Composer\\Config::disableProcessTimeout",
            "@php -S localhost:8000 kirby/router.php"
        ],
        "ci": [
            "@fix",
            "@analyze",
            "@test"
        ],
        "zip": "composer archive --format=zip --file=dist"
    },
    "require": {
        "php": "^8.1",
        "funkjedi/composer-include-files": "^1.1",
        "getkirby/cms": "^3.8.2",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "maximebf/debugbar": "^1.18.1",
        "phpstan/phpstan": "^1.9.2",
        "phpunit/phpunit": "^9.5.26",
        "rector/rector": "^0.14.8",
        "sebastian/phpcpd": "^6.0.3",
        "sempro/phpunit-pretty-print": "^1.4",
        "spatie/phpunit-watcher": "^1.23.6",
        "spatie/ray": "^1.36",
        "squizlabs/php_codesniffer": "^3.7.1"
    }
}
