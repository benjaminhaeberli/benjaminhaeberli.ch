{
    "name": "benjaminhaeberli/benjaminhaeberli.ch",
    "description": "Personal website developed with Kirby CMS",
    "homepage": "https://github.com/benjaminhaeberli/benjaminhaeberli.ch.git",
    "type": "project",
    "license": "AGPL-3.0-only",
    "authors": [
        {
            "name": "Benjamin Haeberli",
            "email": "hello@benjaminhaeberli.ch",
            "homepage": "https://benjaminhaeberli.ch/"
        }
    ],
    "keywords": [
        "kirby",
        "website",
        "portfolio",
        "tailwindcss"
    ],
    "autoload": {
        "psr-4": {
            "BenjaminHaeberli\\Portfolio\\": "src/"
        },
        "classmap": [
            "site/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "getkirby/composer-installer": true,
            "funkjedi/composer-include-files": true,
            "pestphp/pest-plugin": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "serve": "php -S localhost:8000 ./kirby/router.php",
        "refacto": "rector --ansi",
        "lint": "pint",
        "coverage": "pest --colors=always --coverage",
        "fake:refacto": "rector --dry-run --ansi",
        "fake:lint": "pint --test --ansi",
        "test:composer": "composer update --prefer-stable --no-interaction --prefer-dist --ansi && composer validate --strict --ansi",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@fake:refacto",
            "@fake:lint",
            "@test:types",
            "@test:unit"
        ],
        "fix:composer": [
            "@test:composer",
            "composer clear-cache --ansi",
            "composer dump-autoload --ansi",
            "composer bump --ansi",
            "composer audit --ansi"
        ]
    },
    "require": {
        "php": "^8.1",
        "bnomei/kirby3-security-headers": "^2.5.4",
        "funkjedi/composer-include-files": "^1.1",
        "getkirby/cms": "^3.9.4",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "laravel/pint": "^1.10",
        "maximebf/debugbar": "^1.18.2",
        "pestphp/pest": "^1.23",
        "phpstan/phpstan": "^1.10.15",
        "phpunit/phpunit": "^9.6.8",
        "rector/rector": "^0.14.8",
        "sempro/phpunit-pretty-print": "^1.4",
        "spatie/ray": "^1.37.1"
    }
}
