{
  "endOfLine": "lf",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.yml", "*.yaml"],
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["composer.lock", "composer.json"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
